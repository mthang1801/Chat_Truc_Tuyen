<div id="avatar-group-<%= newGroup._id %>" class="modal fade" role="dialog">
  <div class="modal-dialog modal-lg">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h3 class="modal-title text-center" style="color:#1dd1a1;font-weight:bold;font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif">
         <%= newGroup.name %>>
        </h3>
      </div>
      <div class="modal-body">
         
          <form class="form-horizontal" enctype="multipart/form-data" method="post" role="form">
            <div class="row">
              <div class="col-md-6 col-md-push-3 text-center">
                <div class="img-edit-profile-group" id="input-update-avatar-group-<%= newGroup._id %>" >
                  <img src="images/users/<%= newGroup.avatar %>" id="img-avatar-group-<%= newGroup._id %>" class="avatar-group img-circle" alt="avatar">
                </div>
                <h6>Tải lên một ảnh mới</h6>
                <input type="file" name="avatar-group" data-img-id="input-update-avatar-group-<%= newGroup._id %>" class="form-control input-avatar-group" data-group-uid="<%= newGroup._id %>">
              </div>             
            </div>
            <hr>
            <div class="container">
              <div class="form-group">
                <label class="control-label col-md-2" for="name-group-<%= newGroup._id %>" disabled>Tên nhóm: </label>
                <div class="col-md-5">
                  <input type="text" class="form-control" name="name-group" id="name-group-<%= newGroup._id %>" value="<%= newGroup.name %>" disabled>
                </div>
                <div class="col-md-2">
                  <a href="#" class="edit-group" data-group-name="name-group-<%= newGroup._id %>"><i class="glyphicon glyphicon-edit"></i></a>
                </div>
              </div>
              <div class="form-group">
                <label class="control-label col-md-2" for="group-created-time-<%= newGroup._id %>">Ngày khởi tạo</label>
                <div class="col-md-5">          
                  <input type="text" class="form-control" id="group-created-time-<%= newGroup._id %>" value="<%= popupMessageTime(newGroup.createdAt) %>" name="group-created-time" disabled>
                </div>
              </div>
              <div class="form-group">
                <label class="control-label col-md-2" for="group-updated-time-<%= newGroup._id %>">Ngày cập nhật tên nhóm: </label>
                <div class="col-md-5">          
                  <input type="text" class="form-control" id="group-updated-time-<%= newGroup._id %>" value="<% if(newGroup.updatedGroup){ %>
                                <%= Date(newGroup.updatedGroup).toLocaleString() %> 
                              <%} else { %> 
                                 nhóm chưa cập nhật <% } %>" 
                      name="group-updated-time" disabled>
                </div>
              </div>
            </div>
          </form>
      
         </div>
      <div class="modal-footer" style="text-align: center">
        <button type="button" class="btn btn-success btn-update-group" data-group-uid="<%= newGroup._id %>" >Lưu thay đổi</button>
        <button type="button" class="btn btn-danger btn-cancel-update-group" data-group-uid="<%= newGroup._id %>">Hủy</button>
      </div>
    </div>

  </div>
</div>
