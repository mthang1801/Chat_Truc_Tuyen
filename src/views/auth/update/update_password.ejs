<div class="box">
  <div class="content updateBox" style="display:none;">
      <div class="form">
          <form method="post" html="{:multipart=>true}" data-remote="true" action="/register" accept-charset="UTF-8">
              <input id="new-password" class="form-control" type="password" placeholder="Password" name="password" required>
              <input id="new-password_confirmation" class="form-control" type="password" placeholder="Repeat Password" name="password_confirmation" required>
              <input class="btn btn-default btn-register" type="submit" value="Tạo tài khoản" name="commit">
          </form>
      </div>
  </div>
</div>   