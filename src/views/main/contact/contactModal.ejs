<div class="modal fade" id="contactsModal" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Quản lý liên lạc</h4>
            </div>
            <div class="modal-body">
                <ul class="nav nav-tabs" id="contact-manager">
                    <li class="active"><a data-toggle="tab" id="link-find-user" href="#find-user">Tìm người dùng</a></li>
                    <li><a data-toggle="tab" id="link-contacts" href="#contacts">
                        Danh bạ 
                        <% if(countUsersContact > 0) {%>
                        <span class="show-number-contacts count-contacts">
                            (<em><%= countUsersContact %></em>)
                        </span>
                        <%} else {%>
                            <span class="show-number-contacts count-contacts"></span>
                        <%}%>
                    </a></li>
                    <li><a data-toggle="tab" id="link-request-contact-sent" href="#request-contact-sent">
                        Đang chờ xác nhận
                        <% if (countRequestContactSent > 0 ) {%>
                         <span class="show-number-contacts count-request-contact-sent">
                             (<em><%= countRequestContactSent %></em>)
                        </span>
                        <%} else {%>
                            <span class="show-number-contacts count-request-contact-sent"><em></em></span>
                        <%}%> 
                    </a></li>
                    <li><a data-toggle="tab" id="link-request-contact-received" href="#request-contact-received">
                        Yêu cầu kết bạn 
                        <% if (countRequestContactReceived > 0 ) { %>
                        <span class="show-number-contacts count-request-contact-received">
                            (<em><%= countRequestContactReceived %></em>)
                        </span>
                        <%} else { %>
                            <span class="show-number-contacts count-request-contact-received">
                            </span>
                        <%}%>
                    </a></li>
                </ul>
                <div class="tab-content">
                    <div id="find-user" class="tab-pane fade in active">
                        <div class="find-user-top">
                            <div class="input-group col-md-12">
                                <input id="input-find-users-contact" type="text" class="form-control" placeholder="Nhập E-mail hoặc username..." />
                                <span class="input-group-btn">
                                    <button id="btn-find-users-contact" class="btn btn-lg" type="button">
                                        <i class="glyphicon glyphicon-search"></i>
                                    </button>
                                </span>
                            </div>
                        </div>
                        <div class="find-user-bottom">
                            <ul class="contactList">
                                
                            </ul>
                        </div>
                    </div>
                    <div id="contacts" class="tab-pane fade">
                        <div class="find-user-bottom">
                            <ul class="contactList">
                                <% usersContact.forEach( user => { %>
                                <li class="_contactList" data-uid="<%= user._id %>">
                                    <div class="contactPanel">
                                        <div class="user-avatar">
                                            <img <% if(user.avatar == "avatar-default.jpg") {%> src="images/users/default/<%= user.avatar %>" <%} else {%>  src="images/users/<%= user.avatar %>" <%}%>  alt="">
                                        </div>
                                        <div class="user-name">
                                            <p>
                                                <%= user.username %>
                                            </p>
                                        </div>
                                        <br>
                                        <div class="user-address">
                                            <span><%= user.address %></span>
                                        </div>
                                        <div class="user-talk" data-uid="<%= user._id %>">
                                            Trò chuyện
                                        </div>
                                        <div class="user-remove-contact action-danger" data-uid="<%= user._id %>">
                                            Xóa liên hệ
                                        </div>
                                    </div>
                                </li>
                                <%})%>
                            </ul>
                            <hr>
                            <div class="read-more-contact">
                                <a href="javascript:void(0)" class="link-read-more-contact"><strong>Xem thêm danh sách người dùng đang chờ xác nhận</strong></a>
                                <div class="read-more-contact-loader"><div></div><div></div><div></div><div></div></div>
                            </div>
                        </div>
                    </div>
                    <div id="request-contact-sent" class="tab-pane fade">
                        <div class="find-user-bottom">

                            <ul class="contactList">
                                <% contactsSent.forEach( user => { %>
                                    <li class="_contactList" data-uid="<%= user._id %>">
                                        <div class="contactPanel">
                                            <div class="user-avatar">
                                                <img <% if(user.avatar == "avatar-default.jpg") {%> src="images/users/default/<%= user.avatar %>" <%} else {%>  src="images/users/<%= user.avatar %>" <%}%>  alt="">
                                            </div>
                                            <div class="user-name">
                                                <p>
                                                    <%= user.username %>
                                                </p>
                                            </div>
                                            <br>
                                            <div class="user-address">
                                                <span><%= user.address %></span>
                                            </div>
                                            <div class="user-remove-request-contact-sent action-danger display-important" data-uid="<%=user._id %>">
                                                Hủy yêu cầu
                                            </div>
                                        </div>
                                    </li>
                                <%})%>
                            </ul>
                            <hr>
                            <div class="read-more-request-contact-sent">
                                <a href="javascript:void(0)" class="link-more-request-contact-sent"><strong>Xem thêm danh sách người dùng đang chờ xác nhận</strong></a>
                                <div class="read-more-request-contact-sent-loader"><div></div><div></div><div></div><div></div></div>
                            </div>
                        </div>
                    </div>
                    <div id="request-contact-received" class="tab-pane fade">
                        <div class="find-user-bottom">
                            <ul class="contactList">
                                <% contactsReceived.forEach( user => { %>
                                <li class="_contactList" data-uid="<%= user._id %>">
                                    <div class="contactPanel">
                                        <div class="user-avatar">
                                            <img <%if (user.avatar == "avatar-default.jpg") {%> src="/images/users/default/<%= user.avatar%>" <%}else{%> src="/images/users/<%= user.avatar %>" <%}%> alt="">
                                        </div>
                                        <div class="user-name">
                                            <p>
                                                <%= user.username %>
                                            </p>
                                        </div>
                                        <br>
                                        <div class="user-address">
                                            <span><%= user.address %></span>
                                        </div>
                                        <div class="user-approve-request-contact-received" data-uid="<%= user._id %>">
                                            Chấp nhận
                                        </div>
                                        <div class="user-remove-request-contact-received action-danger" data-uid="<%= user._id%>">
                                            Xóa yêu cầu
                                        </div>
                                    </div>
                                </li>
                                <%})%>
                            </ul>
                            <hr>
                            <div class="read-more-request-contact-received">
                                <a href="javascript:void(0)" class="link-more-request-contact-received"><strong>Xem thêm danh sách người dùng đang chờ xác nhận</strong></a>
                                <div class="read-more-request-contact-received-loader"><div></div><div></div><div></div><div></div></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>